{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "root": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.hbs",
      "config/**/*",
      {
        "include": "public/**/*",
        "exclude": "**/*.js"
      }
    ],
    "builder": "swc",
    "typeCheck": true,
    "watchAssets": true
  }
}
